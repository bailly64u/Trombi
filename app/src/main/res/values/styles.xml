<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/trombi_gray_lighter</item>
        <item name="android:statusBarColor">@color/trombi_gray_lighter</item>

        <item name="colorPrimary">@color/trombi_gray</item>
        <item name="colorPrimaryVariant">@color/trombi_gray_lighter</item>
        <item name="colorOnPrimary">@color/trombi_on_primary</item>
        <item name="colorSecondary">@color/trombi_blue</item>
        <item name="colorOnSecondary">@color/trombi_on_secondary</item>

        <item name="android:colorBackground">@color/trombi_background</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/trombi_surface</item>
        <item name="colorOnSurface">@color/trombi_on_surface</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/trombi_on_error</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.MaterialComponents.FloatingActionButton" parent="Widget.Design.FloatingActionButton" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme pour les chips -->
    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_bg_state</item>
        <item name="android:textColor">@color/chip_text_state</item>
    </style>

    <!-- Text Appearance personnalisÃ© pour les chips (requis) -->
    <style name="CustomTextChips" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">#808080</item>
    </style>
</resources>
