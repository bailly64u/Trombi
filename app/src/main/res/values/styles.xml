<resources>

    <!-- Theme clair -->
    <!-- <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"> -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorControlHighlight">@color/textDisabled</item>

        <item name="android:navigationBarColor">@color/colorPrimaryDarker</item>
        <item name="android:statusBarColor">@color/colorPrimaryDarker</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorPrimaryLighter">@color/colorPrimaryLighter</item>

        <item name="backgroundApp">@color/background</item>
        <item name="onBackground">@color/onBackground</item>

        <item name="backgroundL1">@color/backgroundL1</item>
        <item name="backgroundL2">@color/backgroundL2</item>

        <item name="onPrimary">@color/onPrimary</item>
        <item name="onSecondary">@color/onSecondary</item>

        <item name="textHighEmphasis">@color/textHighEmphasis</item>
        <item name="textMediumEmphasis">@color/textMediumEmphasis</item>
        <item name="textDisabled">@color/textDisabled</item>

        <item name="boxBackground">@color/boxBackground</item>
        <item name="dividerColor">@color/divider</item>

        <item name="chipsBackground">@color/divider</item>
    </style>

    <!-- Theme sombre -->
    <style name="AppThemeDark" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorControlHighlight">@color/textDisabledDark</item>

        <item name="android:navigationBarColor">@color/colorPrimaryDarkDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDarkDark</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorPrimaryLighter">@color/colorPrimaryLightDark</item>

        <item name="backgroundApp">@color/backgroundDark</item>
        <item name="onBackground">@color/onBackgroundDark</item>

        <item name="backgroundL1">@color/backgroundDarkL1</item>
        <item name="backgroundL2">@color/backgroundDarkL2</item>

        <item name="onPrimary">@color/onPrimaryDark</item>
        <item name="onSecondary">@color/onSecondaryDark</item>

        <item name="textHighEmphasis">@color/textHighEmphasisDark</item>
        <item name="textMediumEmphasis">@color/textMediumEmphasisDark</item>
        <item name="textDisabled">@color/textDisabledDark</item>

        <item name="boxBackground">@color/boxBackgroundDark</item>
        <item name="dividerColor">@color/dividerDark</item>

        <item name="chipsBackground">@color/backgroundDarkL2</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.MaterialComponents.FloatingActionButton" parent="Widget.Design.FloatingActionButton" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme pour les chips -->
    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_bg_state</item>
        <item name="android:textColor">@color/chip_text_state</item>
    </style>

    <!-- Text Appearance personnalisÃ© pour les chips (requis) -->
    <style name="CustomTextChips" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">#808080</item>
    </style>
</resources>
